div(md-whiteframe='2').mt-16.ph-32.pt-32.pb-8
    div(layout='row')
        div(flex)
            md-input-container().md-block
                input(ng-model='feedback.info.topic' placeholder='Задайте вопрос')
            md-input-container().md-block
                textarea(ng-model='feedback.info.addedinfo' placeholder='Расскажите подробнее о проблеме')
div(md-whiteframe='2').one-email-card.ph-32.pv-8
    div(layout='column')
        div().mv-8
            md-button(ng-click="feedback.send()" ng-if='feedback.proposalSent != 2' ng-disabled='feedback.proposalSent == 1').md-primary.md-raised.md-body-1.ml-0 Отправить вопрос
            md-button(ng-if='feedback.proposalSent == 2').md-success.md-raised.md-body-1.ml-0 Успешно отправлено