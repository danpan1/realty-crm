div(ng-if='trainingLesson.lessonData.lessonNumber')
    div(layout-wrap layout='column' md-whiteframe='2' ng-repeat='task in trainingLesson.lessonData.tasks track by $index').mv-16
        h1.md-headline.m-16 Результат №{{task.id}}: {{trainingLesson.lesson.tasks[$index].title}}
        //p.training__lesson-descr.m-16.mv-0 {{trainingLesson.lesson.tasks[$index].descr}}
        md-switch(ng-model='task.done',
                aria-label='taskDone'
                ng-change='trainingLesson.changeTasks()'
                ng-click="oneInfo.onTaskDoneChange(task.id)").m-16 Выполнено
        div(ng-if='task.done').m-16 Открываем комменты
            md-input-container(flex).mv-0.zh
                label Опишите Ваш результат
                input(ng-model='task.comment', required='' ng-blur='trainingLesson.changeTasks()')
