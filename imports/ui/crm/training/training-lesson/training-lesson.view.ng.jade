div(ng-if='trainingLesson.lesson' layout-wrap layout='column' md-whiteframe='2').mv-16
    h1.md-headline.m-8.mt-16 Занятие №{{trainingLesson.lesson.number}}: {{trainingLesson.lesson.title}}
    p(layout='row').mh-8.training__lesson-descr.mv-0
        md-icon().m-0.p-0
        span #[b Цель:] {{trainingLesson.lesson.target}}
    p(layout='row').mh-8.training__lesson-descr.mv-0
        md-icon().m-0.p-0
        span #[b Результат:] {{trainingLesson.lesson.result}}
    p(layout='row').mh-8.training__lesson-descr.mv-0
        md-icon().m-0.p-0
        span #[b Продолжительность:] {{trainingLesson.lesson.duration}} дней
    p {{trainingLesson.lesson.videoLink}}
    div(ng-if='trainingLesson.video2' layout='row')
        iframe(width="100%" min-height="315" src='' height='600' frameborder="0" allowfullscreen flex='100' id='youtubeVideo').m-0.p-0

div(layout-wrap layout='column' md-whiteframe='2' ng-repeat='task in trainingLesson.lesson.tasks').mv-16
    h1.md-headline.m-16 Задание №{{task.id}}: {{task.title}}
    p.training__lesson-descr.m-16.mv-0 {{task.descr}}
    md-switch(ng-model='task.done',
              aria-label='taskDone'
              ng-click="oneInfo.onTaskDoneChange(task.id)").m-16 Выполнено
    div.m-16 Открываем комменты
