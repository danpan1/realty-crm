div(ng-if='trainingLesson.lesson && !trainingLesson.lesson.intensiv' layout-wrap layout='column' md-whiteframe='2').mv-16.pv-16
    p(layout='row').mh-16.training__lesson-descr.mv-4
        img(src='img/icons/goal.jpg').training__icon
        span.ml-8 #[b Цель:] 
    ol.lesson.mt-0
        li(ng-repeat='target in trainingLesson.lesson.target') {{target}}
    p(layout='row').mh-16.training__lesson-descr.mv-4
        img(src='img/icons/kubok.jpg').training__icon
        span.ml-8 #[b Результат:] 
    ol.lesson.mt-0
        li(ng-repeat='result in trainingLesson.lesson.result') {{result}}
    p(layout='row').mh-16.training__lesson-descr.mv-4
        img(src='img/icons/watch.jpg').training__icon
        span.ml-8 #[b Продолжительность:] {{trainingLesson.lesson.duration}} дней

div(ng-if='trainingLesson.lessonData.lessonNumber')
    div(layout-wrap layout='column' md-whiteframe='2' ng-repeat='task in trainingLesson.lessonData.tasks track by $index').mv-16
        h1.md-headline.m-16 Результат №{{task.id}}: {{trainingLesson.lesson.tasks[$index].title}}
        //p.training__lesson-descr.m-16.mv-0 {{trainingLesson.lesson.tasks[$index].descr}}
        md-switch(ng-model='task.done',
                aria-label='taskDone'
                ng-change='trainingLesson.changeTasks()'
                ng-click="oneInfo.onTaskDoneChange(task.id)").m-16 Выполнено
        div(ng-if='task.done' layout='row').m-16
            md-input-container(flex='100').mv-0.zh
                label Опишите Ваш результат
                textarea(ng-model='task.comment', required='' ng-blur='trainingLesson.changeTasks()')
        div(ng-if='task.done' layout='row').m-16
            md-button(ng-click='trainingLesson.changeTasks()').md-raised.md-primary Сохранить

