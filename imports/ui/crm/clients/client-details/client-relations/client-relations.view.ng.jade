slide-show(slides-list='clientRelations.slideShowImages' isshown='clientRelations.showSlider')
div(md-whiteframe="1").mt-8
    md-tabs(md-border-bottom md-selected='0').realty-list-layout__topbar
        md-tab(label='Предложения от партнеров')

    div
        realty-card(ng-repeat='realty in clientRelations.realtyNew'
        realty='realty'
        realtylisttype="'connections'"
        slider='clientRelations.setSliderImages(images)' relation-type= 'new'
        client-id='clientRelations.client._id')
    div
        realty-card(ng-repeat='realty in clientRelations.realtyOffers'
        realty='realty'
        realtylisttype="'connections'"
        slider='clientRelations.setSliderImages(images)'
        client-id='clientRelations.client._id'
        relation-type= 'offers')

div(md-whiteframe="1")
    md-tabs(md-border-bottom md-selected='0').realty-list-layout__topbar
        md-tab(label='Выбранные объекты')

    div
        realty-card(ng-repeat='realty in clientRelations.realtySaved'
                    realty='realty'
                    realtylisttype="'connections'"
                    slider='clientRelations.setSliderImages(images)'
                    client-id='clientRelations.client._id'
                    relation-type= 'saved')
    div
        realty-card(ng-repeat='realty in clientRelations.realtyMy'
                    realty='realty'
                    realtylisttype="'connections'"
                    slider='clientRelations.setSliderImages(images)'
                    client-id='clientRelations.client._id'
                    relation-type= 'my')
    
    