form( name="userForm" ng-submit='addClient.submit(userForm.$valid)')
    md-input-container.md-block(flex-gt-sm='')
        label Имя
        input(ng-model='addClient.name' required)
    md-input-container.md-block(flex-gt-sm='')
        label Телефон
        input(name='phone', ng-model='addClient.phone',
        placeholder='79165315252',
        required,
        ng-pattern='/^[0-9]{11}$/',
        md-maxlength='11')
