    md-button( ng-click='oneReviewDesc.saveReviewDesc(oneReviewDesc.realty._id, true)' ng-class='{"md-success":oneReviewDesc.descriptionSaved,"md-primary":!oneReviewDesc.descriptionSaved}' aria-label='Сохранить объявление').md-raised.one-review__btn-desc-save.ml-0 {{oneReviewDesc.descriptionSaved ? 'Сохранено'  : 'Сохранить объявление'}}