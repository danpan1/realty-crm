div(md-whiteframe='2').mv-16.ph-32.pv-16

    div(layout='row' layout-align='space-around start')
        div(flex='25')
            h3.md-headline.text-uppercase Фото {{(oneReview.realty.moderator.percent.photo || 0)}}%
        div(flex='25')
            md-button(ng-click='oneReview.upload()'
            ngf-select='',
            ngf-multiple='true',
            ngf-change='oneReview.upload($files)').md-primary.md-raised Добавить фото
        div(flex='50')
            h3().md-headline Ответ от модератора:
            p().md-body-1 Не качественные.
            p().md-body-1 Закажите профессиональные #[a(href='#') в 2 клика]

div(md-whiteframe='2').mv-16
    div(layout='row' layout-wrap layout-align='space-around')
        div(flex='33' ng-repeat='image in oneReview.realty.details.images')
            md-card
                md-button().md-primary.md-raised.btn-set-photo Сделать главным фото
                md-button(aria-label ng-click="oneReview.removeImage(image)").btn-remove-photo
                    md-icon(md-svg-icon='svg/icon-close-white.svg')
                div.one-review-photo(style='background-image:url({{image.url}});')

div(md-whiteframe='2').mv-16.ph-32.pv-16
    div(layout='row' layout-align='space-around start')
        div(flex='50')
            h3.md-headline.text-uppercase Просмотр {{(oneReview.realty.realtor.isCheckout === undefined || oneReview.realty.realtor.isCheckout === false) ? '0%' : '100%'}}
            div().one-review-btn-group
                md-button(ng-disabled='oneReview.realty.realtor.isCheckout' ng-click = 'oneReview.isCheckout()').md-primary.md-raised Была встреча
                md-button(flex-offset='10' ng-disabled='!oneReview.realty.realtor.isCheckout' ng-click = 'oneReview.isCheckout()').md-raised Не встречались
        div(flex='50' )
            h3(ng-if='!oneReview.realty.realtor.isCheckout').md-headline Ответ от модератора:
            p(ng-if='!oneReview.realty.realtor.isCheckout').md-body-1 Без просмотра сложно совершать сделки.
            p(ng-if='!oneReview.realty.realtor.isCheckout').md-body-1 Посмотрите #[a(href='#') «Как делать эффективный просмотр»]

div(md-whiteframe='2').mt-16.ph-32.pv-16
    div(layout='row' layout-align='space-around start')
        div(flex='50')
            h3.md-headline.text-uppercase Качество рекламы {{(oneReview.realty.moderator.percent.description || 0)}}%
        div(flex='50')
            h3().md-headline Ответ от модератора:
            p().md-body-1 Текст 1
            p().md-body-1 Вторая строка

div(md-whiteframe='2').mt-0.mb-16.ph-32.pv-16

    div(flex)
        one-review-desc(realty='oneReview.realty')
        md-button(ng-disabled='!oneReview.realty.title || !oneReview.realty.details.descr || oneReview.realty.title.length >= 65 || oneReview.realty.details.descr.length >= 2000' ng-click='oneReview.saveNewDescription(oneReview.realty._id)').md-primary.md-raised.ml-0 Сохранить только текст объявления

div(md-whiteframe='2').mt-16.ph-32.pv-16
    div(layout='row' layout-align='space-around start')
        div(flex='50')
            h3.md-headline.text-uppercase Объем рекламы {{(oneReview.realty.moderator.percent.advertisement || 0)}}%
        div(flex='50')
            h3().md-headline Ответ от модератора:
            p().md-body-1 Первая строка
            p().md-body-1 Вторая строка

div(md-whiteframe='2').ph-16
    div(layout='column' layout-padding)
        h4().md-title Платные доски
        //div(layout='row')
        //    div(flex='25').md-body-1 Главные доски
        //    div(flex='75').md-body-1.one-review-board-green Размещена и обновляется
        //div(layout='row')
        //    div(flex='25').md-body-1 Остальные доски
        //    div(flex='75').md-body-1.one-review-board-red Купить эффективную рекламу
        div(layout='row')
            div(flex='25').md-body-1 GetRent.pro
            div(flex='75' ng-if='oneReview.realty.moderator.percent.total === 100').md-body-1.one-review-board-green Размещено!
