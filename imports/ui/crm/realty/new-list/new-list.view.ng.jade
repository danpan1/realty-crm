realty-filter
.md-body-1(layout='column', layout-align='space-around stretch')
    .newList(layout='row', md-whiteframe='2', ng-repeat='realty in newList.realty')

        div(layout='column').newList_ID
            div(layout='row', layout-align='center center')
                div {{realty.parseDetails.UID}}
            div(layout='row', layout-align='center center')
                div сегодня
        md-divider

        div().newList_Address
            div(layout='column', layout-align='space-between')
                div {{realty.address.street}} {{realty.address.meta.house}}
                div {{realty.address.districtName}}
                div {{realty.address.areaName}}
                div {{realty.address.metroName}}
        md-divider

        div(layout='row', layout-align='center center').newList_Price {{realty.price}}
        md-divider

        div().newList_Photo
            div(layout='column', layout-align='space-between')
                div Фото
        md-divider

        div().newList_Info
            div(layout='column', layout-align='space-between')
                div {{realty.title}}
        md-divider

        div( flex="auto").newList_Conditions
            div(layout='column', layout-align='space-between')
                div Удобства
        md-divider

        div().newList_Actions
            div(layout='column', layout-align='space-between')
                div Подробнее
