div(md-whiteframe='2').realty-list-filter.ph-32.pv-16
    div(layout='row', layout-align="space-between center")
        div(flex)
            div(layout='column' layout-align='center none')
                div(flex)
                    subway-chips(ng-model="realtyFilter.filter.subways"
                    subways-embeded='realtyFilter.subwaysEmbeded' flex
                    subways-changed='realtyFilter.suitRealty()')
                div(flex)
                    district-chips(ng-model="realtyFilter.filter.districts"
                    districts-embeded='realtyFilter.districtsEmbeded' flex
                    districts-changed='realtyFilter.suitRealty()')

        div(flex='30' flex-offset='10')
            div(layout='column')
                md-input-container(flex).mt-32.mb-0
                    label Выбрать ремонт
                    md-select(ng-model='realtyFilter.filter.renovation', multiple='true' ng-blur='realtyFilter.suitRealty()')
                        //md-optgroup(label='Выбрать ремонт')
                        md-option(ng-value='renovation.id',
                        ng-repeat="renovation in realtyFilter.dictionary.renovation") {{renovation.name}}
                md-input-container(flex).mt-32.mb-0
                    label Выбрать удобства
                    md-select(ng-model='realtyFilter.filter.conditions', multiple='true' ng-blur='realtyFilter.suitRealty()')
                        //md-optgroup(label='Выбрать удобства')
                        md-option(ng-value='condition.id',
                        ng-repeat='condition in realtyFilter.dictionary.conditions') {{condition.name}}

        div(flex='25' flex-offset='10')
            div(layout='row' layout-align='space-between none')
                div(layout='column')
                    div(layout='row' layout-align='space-between end').mt-32
                        label(flex='30') До метро
                        md-input-container(flex='20').mv-0.pv-0
                            input(ng-model='realtyFilter.filter.metroTime', placeholder='минут' ng-blur='realtyFilter.suitRealty()')
                        md-input-container().mv-0.pb-0
                            label пешком
                            md-select(ng-model='realtyFilter.filter.metroTransport' required='' ng-blur='realtyFilter.suitRealty()')
                                md-option(ng-value='transport.id',
                                ng-repeat="transport in realtyFilter.dictionary.transport") {{transport.name}}

                    div(layout='row' layout-align='space-between end').mt-32
                        label(flex='30') Этаж
                        md-input-container(flex='20').mv-0.pv-0
                            label от
                            input(ng-model='realtyFilter.filter.floorFrom' ng-blur='realtyFilter.suitRealty()')
                        span().hyphen
                        md-input-container(flex='20').mv-0.pv-0
                            label до
                            input(ng-model='realtyFilter.filter.floorTo' ng-blur='realtyFilter.suitRealty()')
    div(layout='row' layout-align='space-between center')
        div(flex='35')
            div(layout='row' layout-align='space-between end')
                label Комнат 
                md-checkbox(
                ng-checked='realtyFilter.existsRoomcount(item)',
                ng-repeat='item in realtyFilter.dictionary.roomcount',
                ng-click='realtyFilter.toggleRoomcount(item)',
                ng-blur='realtyFilter.suitRealty()'
                md-no-ink,
                class='md-primary') {{ item.name }}
        div(flex='35' flex-offset='5')
            div(layout='row' layout-align='space-between end')
                md-input-container(flex='40')
                    label цена от
                    input(ng-model='realtyFilter.filter.priceFrom' ng-blur='realtyFilter.suitRealty()')
                md-input-container(flex='40' flex-offset='10')
                    label цена до
                    input(ng-model='realtyFilter.filter.priceTo' ng-blur='realtyFilter.suitRealty()')
        div(flex='30' flex-offset='10')
            div(layout='row')
                md-input-container(flex).mv-32
                    label Кто будет проживать
                    md-select(ng-model='realtyFilter.filter.composition', multiple='true' ng-blur='realtyFilter.suitRealty()')
                        //md-optgroup(label='Выбрать удобства')
                        md-option(ng-value='composition.id',
                        ng-repeat="composition in realtyFilter.dictionary.composition ") {{composition.name}}
