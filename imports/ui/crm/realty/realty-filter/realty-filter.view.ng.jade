div(md-whiteframe='2').realty-list-filter.ph-16
    div(layout="row", layout-align="space-around start")
        div(layout='column' flex='33' layout-align='space-around none').input-ltd
            subway-chips(ng-model = "realtyFilter.filter.subways")
            disctrict-chips(ng-model = "realtyFilter.filter.districts")
        div(layout='column' flex='33' layout-align='space-around none' flex-offset='5').input-ltd
            md-input-container
                label Выбрать ремонт
                md-select(ng-model='realtyFilter.filter.renovation', multiple='true')
                    //md-optgroup(label='Выбрать ремонт')
                    md-option(ng-value='renovation.id',
                    ng-repeat="renovation in realtyFilter.dictionary.renovation ") {{renovation.name}}
            md-input-container
                label Выбрать удобства
                md-select(ng-model='realtyFilter.filter.conditions', multiple='true')
                    //md-optgroup(label='Выбрать удобства')
                    md-option(ng-value='condition.id',
                    ng-repeat="condition in realtyFilter.dictionary.conditions ") {{condition.name}}

        div(layout='column' flex='33' layout-align='space-around none' flex-offset='5').input-ltd
            div(layout='row' layout-align="center center")
                label До метро
                md-input-container.md-block(md-no-float='')
                    input(ng-model='realtyFilter.filter.metroPeshkom', placeholder='минут')
                div пешком

            div(layout='row' layout-align='center center') 
                label.mt-16 Этаж
                md-input-container(flex='20' flex-offset='10').md-block
                    label от
                    input(ng-model='realtyFilter.filter.floorFrom')
                md-input-container(flex='20' flex-offset='10').md-block
                    label до
                    input(ng-model='realtyFilter.filter.floorTo')
    div(layout="row" layout-align='start center').mt-16
        div(layout='row')
            div(flex)
                label Комнат 
                md-checkbox(
                ng-checked='realtyFilter.existsRoomcount(item)',
                ng-repeat='item in realtyFilter.dictionary.roomcount',
                ng-click='realtyFilter.toggleRoomcount(item)',
                md-no-ink,
                class='md-primary') {{ item }}
        div(layout='row' flex-offset='10')
            md-input-container(flex='25').md-block
                label цена от
                input(ng-model='realtyFilter.filter.priceFrom')
            md-input-container(flex='25' flex-offset='10').md-block
                label цена до
                input(ng-model='realtyFilter.filter.priceTo')

