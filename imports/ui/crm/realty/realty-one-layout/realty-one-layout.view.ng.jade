div()
    div(md-whiteframe='1').topbar
        div(layout='row' layout-align='start center')
            md-button(aria-label='Вернуться назад' ui-sref="crm.realty.list.my").btn-back.mh-16
                md-icon(md-svg-src='svg/icon-arrow-left.svg')
            h3(ng-if='realtyOneLayout.infoRealty.address').md-headline г Москва, {{realtyOneLayout.infoRealty.address.street}}, {{realtyOneLayout.infoRealty.address.house}}, кв {{realtyOneLayout.infoRealty.address.flat}}
    div(md-whiteframe='1').tabbar
        md-tabs(md-selected="realtyOneLayout.selectedTab")
            md-tab(label='1. Инфо об объекте' ui-sref='crm.realty.one.info')
            md-tab(label='2. Подготовка {{realtyOneLayout.infoRealty.moderator.percent.total || 0}}%' ui-sref='crm.realty.one.review')
            md-tab(label='3. Подбор клиентов' ui-sref='crm.realty.one.find({searchType:\'my\'})')
            md-tab(label='4. Обработка клиентов' ui-sref='crm.realty.one.connections()')
            md-tab(label='5. Отправить Email' ui-sref='crm.realty.one.email')
    ui-view(ng-if='realtyOneLayout.loadedData')