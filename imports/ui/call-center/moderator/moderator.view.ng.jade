                        md-option(ng-value='var',
                        ng-repeat='var in moderator.rating.variants') {{var}}%
            div
                //md-button(ng-class="{ 'md-danger' : moderator.realty.moderator.percent.description && moderator.realty.moderator.percent.description < 60, 'md-primary' : moderator.realty.moderator.percent.description && moderator.realty.moderator.percent.description >= 60 }").md-raised 
                    | {{ (moderator.realty.moderator.percent.description < 60) ? 'Качественное' : 'Некачественное' }}
        div(flex='50')
            div(layout='column' flex='100')
                h3().md-headline Ответ от модератора:
                md-input-container(flex='100').mv-0.pv-0
                    textarea(ng-model='moderator.realty.moderator.comment.description', placeholder='Напишите комментарий')
                                        
div(md-whiteframe='2').ph-32.pv-16
    div(layout='row')
        div(flex)
            h3().md-subhead {{moderator.realty.title}}
            p().md-body-1 {{moderator.realty.details.descr}}
