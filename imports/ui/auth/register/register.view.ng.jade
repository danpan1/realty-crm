md-content(layout='row', layout-align='center start', layout-fill='', layout-margin='')
    md-whiteframe.md-whiteframe-z2(layout='column', flex='', flex-md='50', flex-lg='50', flex-gt-lg='33', layout-fill='')
        md-toolbar.md-primary.md-tall(layout='column', layout-align='end', layout-fill='')
            .md-toolbar-tools.md-toolbar-tools-bottom(layout='row')
                h3().md-display-1 Register a new account
        div(layout='column', layout-fill='', layout-margin='', layout-padding='')
            div(layout='row', layout-fill='', layout-margin='')
                p().md-body-2 Use your email?
            form(name='registerForm', layout='column', layout-fill='' layout-padding='', layout-margin='')
                md-input-container
                    label Имя
                    input(type='text', required='')
                md-input-container
                    label Фамилия
                    input(type='text', aria-label='фамилия', required='')
                md-input-container
                    label Телефон
                    input(type='tel', aria-label='телефон', required='')
                md-input-container
                    label Email
                    input(type='email', ng-model='register.credentials.email', aria-label='email', required='')
                md-input-container
                    label Пароль
                    input(type='password', ng-model='register.credentials.password', aria-label='пароль', required='')
                md-input-container
                    label Вконтакте
                    input(type='text', aria-label='вконтакте', required='')

                div(layout='row', layout-align='end center')
                    md-button.md-raised.md-primary(ng-click='register.register()', aria-label='login', ng-disabled='register.registerForm.$invalid()') Register
            md-toolbar.md-warn(ng-show='register.error', layout='row', layout-fill='', layout-padding='', layout-margin='')
                p.md-body-1 {{ register.error }}
            md-divider
            div(layout='row', layout-align='center')
                a.md-button(href='/login') Already a user?
