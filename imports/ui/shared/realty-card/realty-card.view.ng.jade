div(layout='column' md-whiteframe='2').mv-8
    div.newList(layout='row')
        div(layout='column' ng-if='::realtyCard.realtylisttype != "connections"').newList_ID.p-8
            div(layout='row')
                div Сегодня
            div(layout='row')
                div {{::realtyCard.realty.parseDetails.UID}}
        div(layout='column' ng-if='::realtyCard.realtylisttype == "connections"').newList_ID.md-body-1.ph-16.pv-8
            div id {{::realtyCard.realty.realtor.realtorIdShort | price}}
            div(layout='column' layout-align='space-between center' ng-if = 'realtyCard.isNew')
                span(ng-if='!realtyCard.realty.relations.read').newList__new-connections.mv-0 Новая связь
                span(ng-if='realtyCard.realty.relations.read').mv-8 Прочитано
                md-checkbox(ng-click="realtyCard.updateRealty(realtyCard.realty._id)" id="connectionRead" name="connectionRead" ng-model='realtyCard.realty.relations.read' flex flex-offset='5' aria-label="Checkbox 1").md-primary.md-subhead.mb-0
        md-divider

        div().newList_Address.p-8
            div(layout='column', layout-align='space-between')
                p.mv-0
                    div.mb-8(ng-repeat='subway in ::realtyCard.realty.address.subwaysEmbedded').metro-name
                        span(class='metro-color-{{subway.line}}').metro-color
                        span {{subway.name}}
                    div.mb-8 {{::realtyCard.realty.address.metroTime}} мин. {{::realtyCard.dictionary.transport[realtyCard.realty.address.metroTransport].name}}
                div(ng-if='realtyCard.realtylisttype != "connections"')
                    p(layout='column').address-info.mv-0
                        div.mb-8 {{::realtyCard.realty.address.street}}
                        div.mb-8 {{::realtyCard.realty.address.districtName}}
                        div {{::realtyCard.realty.address.areaName}}
        md-divider

        div(layout='column').newList_Price.p-8
            div.mb-8.price #[b {{::realtyCard.realty.price | price}}]
            div.mb-8.type-repair {{::realtyCard.dictionary.renovation[realtyCard.realty.details.renovation].name || 'Не известно ремонт'}}
            div(ng-if="realtyCard.realtylisttype == 'connections'" ng-class=' {"color-success" : realtyCard.realty.operator.qualification == 2, "color-danger" : realtyCard.realty.operator.qualification == 0} ').type-owner {{::realtyCard.dictionary.qualification[realtyCard.realty.operator.qualification].name}}
            div.color-primary(ng-if="realtyCard.realtylisttype == 'demonstration'") #[b Объявление]
            //div.favorites В избранное
        md-divider

        div().newList_Photo
            div(layout='column', layout-align='space-between')
                div.apartment-pic(ng-click="realtyCard.showSlider( )")
                    img(ng-src='{{::realtyCard.realty.image || "realty_no_image.png"}}')
                    div().icon-zoom
        md-divider

        div().newList_Info.p-8
            div(layout='column' layout-align='space-between' ng-if="!realtyCard.realtylisttype || realtyCard.realtylisttype == 'connections'")
                div.mb-8 {{::realtyCard.realty.roomcount}}-к квартира
                div.mb-8 Длительный
                div.mb-8 {{::realtyCard.dictionary.materials[realtyCard.realty.details.materials].name || 'Не известно материалы'}}
                div.mb-8 {{::realtyCard.realty.floor}}/{{::realtyCard.realty.floormax}} {{::realtyCard.realty.square}}м2
            div(ng-if="realtyCard.realtylisttype == 'demonstration'")
                div.md-uppercase.md-bold 1 мая 17:00 | через 3:00
                div.md-uppercase.md-bold {{::realtyCard.realty.address.street}}, д.{{::realtyCard.realty.address.meta.house}}, кв.208
            div(ng-if="realtyCard.realtylisttype != 'connections'" layout="column" layout-align="space-between start")
                div.md-bold {{::realtyCard.realty.contacts[0].name}} | {{::realtyCard.realty.contacts[0].phones[0].phone}}
                div.uppercase.color-primary Объявление
        md-divider
        
        div(ng-if="realtyCard.realtylisttype == 'connections'" layout='column' layout-align='start start').newList_Info.p-8
            div.mb-8.nowrap #[b {{::realtyCard.realty.realtor.phone | phone}}]
            div.mb-8 #[b Риелтор {{::realtyCard.realty.realtor.name}}]
            div(ng-click="realtyCard.ngShowDescr = !realtyCard.ngShowDescr").mt-16.color-primary.uppercase #[b Объявление]
        div(ng-if="realtyCard.realtylisttype != 'connections'").newList_Conditions.p-8
            div(layout='row', layout-wrap, layout-align='space-around')
                - for (var i = 0; i < 12; i++)
                    img(src='img/icons/icon-tv.png')
        md-divider

        div(layout='column' layout-align="space-between left").newList_Actions.p-8
            div(ng-if="realtyCard.realtylisttype == 'demonstration'")
                div(ng-if="true")
                    div.color-primary Отправить отчет
                    div.color-hide Перенести показ
                div(ng-if="false")
                    div Риелтор
                    div {{::realtyCard.realty.contacts[0].name}} 
                    div {{::realtyCard.realty.contacts[0].phones[0].phone}}
                    div.color-hide скрыть
            div(ng-if="realtyCard.realtylisttype == ''" layout="column" layout-align="space-between start")
                div.md-uppercase.color-primary Назначить показ
                div.md-uppercase.color-danger Купить за 150 руб.
                div.color-hide(ng-click="console.log('sdfsdf')") скрыть
            div(ng-if="realtyCard.realtylisttype == 'connections'" layout="column" layout-align="space-between start")
                div.mv-8.md-uppercase.color-primary Сохранить
                div.mb-8.color-hide(ng-click="console.log('sdfsdf')") скрыть
            div(flex layout='row', ng-if="realtyCard.realtylisttype != 'connections'" layout-align='center center')
                md-button(md-no-ink='' ng-click="realty.ngShowDescr =!realty.ngShowDescr").md-primary Подробнее
                

    div.ph-32(ng-show="realtyCard.ngShowDescr")
        div(ng-if="!realtyCard.realtylisttype")
            p {{::realtyCard.realty.details.descr}}
            div(layout='row')
                md-button(ng-click='realtyCard.takeRealty(realtyCard.realty._id)').md-raised.md-warn.btn-get-object Взять объект
            span(flex)
            md-button(ng-click="realtyCard.ngShowDescr =! realtyCard.ngShowDescr") Закрыть
        div(ng-if="realtyCard.realtylisttype == 'connections'")
            div(layout="row")
                p(flex="35") {{::realtyCard.realty.roomcount}} комнаты, длительная, Кирпичный, {{::realtyCard.realty.floor}}/{{::realtyCard.realty.floormax}}, 50м #[sup 2]
                p(flex="65") Удобства
            div {{::realtyCard.realty.details.descr}}
            div(layout="row")
                div(flex="90")
                div(flex="10") 
                    md-button.md-default.md-raised(ng-click="realtyCard.ngShowDescr = !realtyCard.ngShowDescr") Закрыть
        div(ng-if="realtyCard.realtylisttype == 'demonstration'")
            div(layout="row")
                p(flex="35") {{::realtyCard.realty.roomcount}} комнаты, длительная, Кирпичный, {{::realtyCard.realty.floor}}/{{::realtyCard.realty.floormax}}, 50м #[sup 2]
                p(flex="65") Удобства
            div  {{::realtyCard.realty.details.descr}}
            div(layout="row")
                div(flex="90") Риелтор {{::realtyCard.realty.contacts[0].name}} {{::realtyCard.realty.contacts[0].phones[0].phone}}
                div(flex="10") 
                    md-button(ng-click="realtyCard.ngShowDescr = !realtyCard.ngShowDescr") Закрыть
