md-autocomplete(flex='',
required='',
md-input-name='autocompleteFieldDistrict',
md-input-minlength='2',
md-no-cache='districtSingle.noCache',
md-selected-item='districtSingle.district',
md-selected-item-change='districtSingle.changeArea()',
md-search-text='districtSingle.searchTextDistrict',
md-items='item in districtSingle.districtsAreaSuggestionList',
md-item-text='item.name',
md-floating-label='Район')
    md-item-template
        span(md-highlight-text='districtSingle.searchTextDistrict') {{item.name}}
